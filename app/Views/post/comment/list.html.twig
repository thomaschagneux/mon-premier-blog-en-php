<div class="tab-pane fade" id="post-commentary" role="tabpanel" aria-labelledby="post-commentary-tab">
    <div class="card-header">
        <h2>Commentaires</h2>
    </div>
    <div class="card-body">
        {% if comments is defined and comments|length > 0 %}
            {{ comments_table | raw }}
        {% else %}
            <p>Aucun commentaire pour ce post.</p>
        {% endif %}
        {{ dumper(comments) }}
    </div>
</div>