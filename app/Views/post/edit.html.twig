{% extends "components/base/base_admin.html.twig" %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h1>Modification d'un post</h1>
        </div>

        <div id="loading-overlay">
            <h2>Chargement de la page...</h2>
            <div class="spinner"></div>
        </div>


        <div class="card-body">
            <form method="POST" action="{{path('edit_post_action', {'id': post.id})}}" enctype="multipart/form-data">
                <div class="row">
                    <div class="col col-md-6">
                        {{ form_rows.title | raw }}
                    </div>
                    <div class="col col-md-6">
                        {{ form_rows.lede | raw }}
                    </div>
                </div>
                <div class="row">
                    {{ form_rows.content | raw }}
                </div>
                <div class="d-flex justify-content-center justify-content-md-end">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}